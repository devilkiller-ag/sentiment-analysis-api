{
  "name": "sentiment_analysis_api",
  "version": "1.0.0",
  "description": "Sentiment Analysis Server",
  "type": "module",
  "imports": {
    "#*": "./src/*"
  },
  "scripts": {
    "dev": "tsx --watch --env-file .env src/index.ts",
    "start": "node --env-file .env dist/index.js",
    "build": "tsc",
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "husky",
    "postinstall": "prisma generate"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/devilkiller-ag/sentiment-analysis-api.git"
  },
  "keywords": [
    "Sentiment Analysis API"
  ],
  "author": "Ashmit JaiSarita Gupta",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/devilkiller-ag/sentiment-analysis-api/issues"
  },
  "homepage": "https://github.com/devilkiller-ag/sentiment-analysis-api#readme",
  "dependencies": {
    "@prisma/client": "^6.6.0",
    "express": "^5.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.1",
    "@tsconfig/node22": "^22.0.1",
    "@types/express": "^5.0.1",
    "@types/node": "^22.14.1",
    "eslint": "^9.25.1",
    "eslint-plugin-perfectionist": "^4.12.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "prettier": "^3.5.3",
    "prisma": "^6.6.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.31.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint",
      "prettier --check"
    ],
    "*.{json,yml,yaml,md}": [
      "prettier --check"
    ]
  }
}
